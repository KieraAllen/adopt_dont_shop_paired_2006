<h1>Editing Review</h1>

<%= form_tag "/reviews/#{@review.id}", method: :patch do %>
  <%= label_tag :title %>
  <%= text_field_tag :title %>
  <%= label_tag :rating %>
  <%= text_field_tag :rating %>
  <%= label_tag :content %>
  <%= text_field_tag :content %>
  <%= label_tag :shelter_id %>
  <%= text_field_tag :shelter_id %>
  <%= label_tag :image %>
  <%= text_field_tag :image %>

  <%= submit_tag 'Update Review' %>
<% end %>
