
<h1>Pets at the <%= @shelter.name %> Shelter</h1>

<%= link_to "Create Pet", "/shelters/#{@shelter.id}/pets/new" %>

<% @shelter.pets.each do |pet| %>
  <section id="pet-<%= pet.id %>">
    <h3> <%=  link_to pet.name, "/shelters/#{@shelter.id}/pets/#{pet.id}" %>  </h3>
    <h3><%= pet.image %></h3>
    <p><%= pet.approximate_age %></p>
    <p><%= pet.sex %></p>
    <p><%= pet.shelter.name %></p>
  </section>
<% end %>
