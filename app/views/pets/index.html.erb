<h1>All Pets</h1>

<% @pets.each do |pet| %>
  <section id="pet-<%= pet.id %>">
    <h3><a href="/shelters/:id/pets/<%= pet.id %>"><%= pet.name %></a></h3>
    <h3><%= pet.image %></h3>
    <p><%= pet.approximate_age %></p>
    <p><%= pet.sex %></p>
    <p><%= pet.shelter.name %></p>
  </section>
<% end %>
