<h1>Editing Pet</h1>

<%= form_tag "/pets/#{@pet.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :age %>
  <%= text_field_tag :age %>
  <%= label_tag :sex %>
  <%= text_field_tag :sex %>
  <%= label_tag :shelter_id %>
  <%= text_field_tag :shelter_id %>
  <%= label_tag :image %>
  <%= text_field_tag :image %>

  <%= submit_tag 'Update Review' %>
<% end %>
