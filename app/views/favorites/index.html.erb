
<h1>All Favorites</h1>

<% @pets.each do |pet| %>
  <section id="pet-<%= pet.id %>">
    <h3><a href="/shelters/:id/pets/<%= pet.id %>"><%= pet.name %></a></h3>
    <h3><%= pet.image %></h3>
    <%= button_to "Remove From Favorites", "/favorites/#{pet.id}", method: :patch %>
  </section>
<% end %>
